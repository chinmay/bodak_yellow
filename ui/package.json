{
  "name": "bodak_yellow",
  "description": "Make Money Moves",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "dependencies": {
    "axios": "^0.18.1",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "core-js": "^2.6.9",
    "currencylayer-client": "^1.0.0",
    "dirty": "^1.1.0",
    "dotenv": "^5.0.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "es6-promise": "^4.2.8",
    "express": "^4.17.1",
    "express-cache-controller": "^1.1.0",
    "helmet": "^3.19.0",
    "i18next": "^10.6.0",
    "i18next-browser-languagedetector": "^2.2.4",
    "i18next-xhr-backend": "^1.5.1",
    "intl": "^1.2.5",
    "jest-enzyme": "^6.1.2",
    "localforage": "^1.7.3",
    "moment": "^2.24.0",
    "node-sass-chokidar": "1.2.2",
    "prop-types": "^15.7.2",
    "qs": "^6.7.0",
    "raf": "^3.4.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-i18next": "^7.13.0",
    "react-redux": "^5.1.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^1.1.5",
    "react-swipeable-views": "^0.12.18",
    "react-syntax-highlighter": "^8.1.0",
    "react-transition-group": "^2.9.0",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "shortid": "^2.2.14",
    "typeface-roboto": "0.0.54",
    "typeface-roboto-mono": "0.0.54",
    "video-react": "^0.13.9"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.10.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.3.0",
    "moxios": "^0.4.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.8.6",
    "redux-mock-store": "^1.5.3",
    "source-map-explorer": "^1.8.0",
    "stylelint": "^9.10.1",
    "stylelint-config-idiomatic-order": "^5.0.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-scss": "^3.9.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!src/index.js",
      "!src/i18n.js",
      "!src/i18nTestConfig.js",
      "!src/setupTests.js",
      "!src/rootReducer.js",
      "!src/registerServiceWorker.js",
      "!src/shared/images"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "coverageReporters": [
      "text",
      "html"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,scss}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "main": "index.js",
  "private": true,
  "proxy": {
    "/api": {
      "target": "http://localhost:5001",
      "secure": false
    }
  },
  "scripts": {
    "analyze": "source-map-explorer build/static/js/main.*",
    "build": "run-s build-css build-js",
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "build-js": "react-scripts build",
    "dev-client": "react-scripts start",
    "dev-server": "NODE_ENV=development PORT=5001 nodemon --watch server --watch build server|bunyan || true",
    "eject": "react-scripts eject",
    "lint": "run-s lint:js lint:css",
    "lint:css": "node_modules/.bin/stylelint src/**/*.scss --syntax scss",
    "lint:js": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "precommit": "lint-staged",
    "prod-server": "node server|bunyan",
    "start": "run-p watch-css dev-server dev-client",
    "test": "react-scripts test --env=jsdom ",
    "test:all": "run-s lint:css build-css lint:js test:ci",
    "test:ci": "react-scripts test --coverage --ci --color --env=jsdom --no-cache",
    "test:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive"
  }
}
